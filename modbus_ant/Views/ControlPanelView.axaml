	<UserControl.DataContext>
		<vm:ControlPanelViewModel />
	</UserControl.DataContext>
	
	<Grid ShowGridLines="False" ColumnDefinitions="200,280,0,30,30" Margin="2">

		<Panel Margin="1" Height="40" Grid.Column="0">
		<StackPanel Spacing="2" Orientation="Horizontal" VerticalAlignment="Stretch">
			<StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
				<TextBlock 
					VerticalAlignment="Top" 
					HorizontalAlignment="Center">
					Type
				</TextBlock>
				<ComboBox 
					VerticalAlignment="Bottom" 
					Width="100" 
					ItemsSource="{Binding HwOptions}"
					SelectedIndex="{Binding HwOptionSelected}"
					/>
			</StackPanel>
			<StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
				<TextBlock 
					VerticalAlignment="Top" 
					HorizontalAlignment="Center">
					Id
				</TextBlock>
				<TextBox VerticalAlignment="Bottom" Text="{Binding ID}"/>
			</StackPanel>
		</StackPanel>
	</Panel>
	
		<Panel Grid.Column="1" HorizontalAlignment="Stretch" Name="TCP_HW" IsVisible="False">
			<TextBlock 
				VerticalAlignment="Top" 
				HorizontalAlignment="Center">
				Harware
			</TextBlock>
			<TextBox 
				VerticalAlignment="Bottom" 
				Width="200"/>
		</Panel>
		
		<Panel Grid.Column="1" VerticalAlignment="Bottom" Name="RTU_HW" IsVisible="True" Margin="5,0">
			<StackPanel Orientation="Horizontal">
				<StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
					<TextBlock 
						VerticalAlignment="Top" 
						HorizontalAlignment="Center">
						Hardware
					</TextBlock>
					<ComboBox 
						VerticalAlignment="Bottom" 
						HorizontalAlignment="Stretch" 
						ItemsSource="{Binding RTUOptions}"
						SelectedIndex="{Binding RTUOptionSelected}"
						DropDownOpened="DropOpenEvent"
						
						/>
				</StackPanel>
				<StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
					<TextBlock 
						VerticalAlignment="Top" 
						HorizontalAlignment="Center">
						Speed
					</TextBlock>
					<ComboBox 
						VerticalAlignment="Bottom" 
						Width="120"
						ItemsSource="{Binding RTUSpeeds}"
						SelectedIndex="{Binding RTUSpeedSelected}"
					/>
				</StackPanel>
			</StackPanel>
		</Panel>
		
		<Button 
			ToolTip.Tip="Connection settings"  
			VerticalAlignment="Stretch"
			Grid.Column="3"
			>
			<Panel>
				<PathIcon  Data="{StaticResource SettingsRegular}"/>
			</Panel>
		</Button>
			
		<ToggleButton Grid.Column="4" 
		              Name="ButtonConnect" 
		              ToolTip.Tip="Disconnect" 
		              VerticalAlignment="Stretch"
		              Command="{Binding RelayCommand_ConnectButtonClickCommand}"
		              IsChecked="{Binding IsConnectRequested}"
		>
			<Panel>
				<PathIcon  Data="{StaticResource PlugDisconnectedRegular}"/>
			</Panel>
		</ToggleButton>

	</Grid>
	
</UserControl>
